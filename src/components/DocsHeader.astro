---
import type { Props } from '@astrojs/starlight/props';
---

<div class="docs-header">
	<a href="https://sheetyapp.com/" class="logo-link" title="Sheety App">
		<img src="/logo-64.png" alt="Sheety App Logo" width="32" height="32" />
	</a>
	<span class="separator">/</span>
	<a href="/" class="docs-link">Documentation</a>
</div>

<style>
	.docs-header {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.logo-link {
		display: flex;
		align-items: center;
		transition: transform 0.3s ease;
	}
	
	.logo-link:hover {
		transform: scale(1.1) rotate(5deg);
	}
	
	.logo-link img {
		width: 32px;
		height: 32px;
		display: block;
	}

	.separator {
		color: var(--sl-color-accent-high);
		font-size: 1.5rem;
		font-weight: 200;
		user-select: none;
		opacity: 0.6;
		text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
		margin: 0 0.25rem;
	}

	.docs-link {
		color: var(--sl-color-white);
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		transition: opacity 0.2s;
	}
	
	.docs-link:hover {
		opacity: 0.8;
	}
</style>
